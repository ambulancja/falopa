data A × B where
  _,,_ : A → B → A × B

data OK where
  ok : OK

data Term where
  var   : Int → Term
  _`_   : Term → Term → Term
  \_._ : Int → Term → Term

data Type where
  base : Int → Type
  _->_ : Type → Type → Type

data Context where
  empty : Context
  _,_∷_ : Context → Int → Type → Context

x ∈ (Γ , x ∷ A) ∷ A    = ok
x ∈ (Γ , _ ∷ _) ∷ A    = x ∈ Γ ∷ A
Γ ⊢ var x    ∷ A       = x ∈ Γ ∷ A
Γ ⊢ \ x . t  ∷ A -> B  = Γ , x ∷ A ⊢ t ∷ B
Γ ⊢ t ` s    ∷ B       = Γ ⊢ t ∷ A -> B
                      >> Γ ⊢ s ∷ A
  where A = _

main =
    Γ ⊢ (var 0 ` var 0) ∷ A
  >>
    Γ ,, A
  where Γ = _
        A = _

